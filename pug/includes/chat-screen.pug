mixin chat 
  .chat-screen.screen#chat
    //- Header
    +header-of-screen("Chat")
    //- Body
    .body
      .container
        //- Active Players
        .service-container
          h4.text-center Live Players
          .active-players
            span Vortex
            span Zad
            span Islam
            span sara
            span Test
            span Dest
            
        //- Messages
        .service-container.mt-2
          h4.text-center Messages
          .messages
            p Islam: Hoho
            p Islam: Hehe
            p Islam: Haha
            p Islam: Huhu
            p Islam: Test
          //- Messages Sender
          .write-messages
            form.d-flex
              textarea(
                class="w-100",
                name="messages",
                id="messages",
                placeholder="Type Your Message Here",
              )
              button.submit.circle: i(class="fa-solid fa-paper-plane")  