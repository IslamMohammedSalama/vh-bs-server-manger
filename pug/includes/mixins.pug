mixin header-of-screen(title = "Screen Title") 
  //- Header
  div.header.p-realtive
    button.circle.back(aria-label="Back"): i(class="fa-solid fa-chevron-right fa-rotate-180 fa-sm")
    span= title

mixin header-of-screen-and-add-btn(title = "Screen Title") 
  //- Header
  div.header.p-realtive
    button.circle.back(aria-label="Back"): i(class="fa-solid fa-chevron-right fa-rotate-180 fa-sm")
    span= title
    button.circle.add(aria-label="Black"): i(class="fa-solid fa-plus fa-sm")

