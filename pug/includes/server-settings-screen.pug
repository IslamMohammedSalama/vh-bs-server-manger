            li
              form(action="")
                label.form
                  span Message 7 :
                  textarea#message-7(placeholder="Type Your Message 7 Here", name="message-7")
            li
              form(action="")
                label.form
                  span Message 8 :
                  textarea#message-8(placeholder="Type Your Message 8 Here", name="message-8")
      .overley
    li.popup
      button.d-flex.justify-content-between.w-100
        span Afk Remove
        i.fa-solid.fa-angle-right
      //- Popup
      .popup-window
        .popup-header
          h5 Afk Remove
          button.close.circle
            i.fa.fa-close
        .body.mt-2
          ul
            li
              form(action="")
                label.switch
                  span Afk Remove
                  span
                    input#enable-afk-remove.toggle-checkbox(type="checkbox", name="enable-afk-remove")
                    button.toggle-switch
            li
              form(action="")
                label.switch
                  span Kick Idle From Lobby
                  span
                    input#enable-kick-from-lobby.toggle-checkbox(type="checkbox", name="enable-kick-from-lobby")
                    button.toggle-switch
            li.number-chooser
              span In Game Idle Time In Sec :
              span.d-flex.justify-content-between.align-items-center
                button.circle
                  i.fa-solid.fa-plus
                span.counter(data-min="1") 1
                button.circle
                  i.fa-solid.fa-minus
            li.number-chooser
              span Lobby Idle Time In Sec :
              span.d-flex.justify-content-between.align-items-center
                button.circle
                  i.fa-solid.fa-plus
                span.counter(data-min="1") 1
                button.circle
                  i.fa-solid.fa-minus
      .overley
    li.popup
      button.d-flex.justify-content-between.w-100
        span Auto Night Mode
        i.fa-solid.fa-angle-right
      //- Popup
      .popup-window
        .popup-header
          h5 Auto Night Mode
          button.close.circle
            i.fa.fa-close
        .body.mt-2
          ul
            li
              form(action="")
                label.form
                  span  Start Time
                  input(type="time", name="")
            li
              form(action="")
                label.form
                  span  End Time
                  input(type="time", name="")
