                    input#enable-score-screen-announcement.toggle-checkbox(type="checkbox", name="enable-score-screen-announcement")
                    button.toggle-switch
            li
              form(action="")
                label.form
                  span Message 1 :
                  textarea#message-1(placeholder="Type Your Message 1 Here", name="message-1")
            li
              form(action="")
                label.form
                  span Message 2 :
                  textarea#message-2(placeholder="Type Your Message 2 Here", name="message-2")
            li
              form(action="")
                label.form
                  span Message 3 :
                  textarea#message-3(placeholder="Type Your Message 3 Here", name="message-3")
            li
              form(action="")
                label.form
                  span Message 4 :
                  textarea#message-4(placeholder="Type Your Message 4 Here", name="message-4")
            li
              form(action="")
                label.form
