mixin server-settings 
  //- Header
  +header-of-screen("Server Settings")
  //- body
  ul.container
    //- Sever Name
    li
      form(action="")
        label.form
          span Server Name:
          textarea#server-name(placeholder="Type Your Server Name Here", name="server-name")
    //- Host Device Name
    li
      form(action="")
        label.form
          span Host Device Name :
          textarea#host-device-name(placeholder="Type Your Host Device Name Here", name="host-device-name")
    //- Host Name
    li
      form(action="")
        label.form
          span Host Name :
          textarea#host-name(placeholder="Type Your Host Name Here", name="host-name")
    //- First Time Join Message
    li
      form(action="")
        label.form
          span First Time Join Message :
          textarea#join-msg(placeholder="Type Your Join Message Here", name="join-msg")
    //- After Warn Kick Message
    li
      form(action="")
        label.form
          span After Warn Kick Message :
          textarea#kick-msg.kick-msg(placeholder="Type Your Kick Message Here")
    //- Players Size
    li.number-chooser
      span Player Size :
      span.d-flex.justify-content-between.align-items-center
        button.circle
          i.fa-solid.fa-plus
        span.counter(data-min="2") 2
        button.circle
          i.fa-solid.fa-minus
    //- Warn Cooldown
    li.number-chooser
      span Warn Cooldown Time :
      span.d-flex.justify-content-between.align-items-center
        button.circle
          i.fa-solid.fa-plus
        span.counter(data-min="1") 30
        button.circle
          i.fa-solid.fa-minus
    //- Allow In Game Chat
    li
      form(action="")
        label.switch
          span Allow In Game Chat
          span
            input#allow-in-game-chat.toggle-checkbox(type="checkbox", name="allow-in-game-chat")
            button.toggle-switch
    //- Allow Team Chat
    li
      form(action="")
        label.switch
          span Allow Team Chat
          span
            input#allow-team-chat.toggle-checkbox(type="checkbox", name="allow-team-chat")
            button.toggle-switch
    //- Allow Votes
    li
      form(action="")
        label.switch
          span Allow Votes
          span
            input#allow-votes.toggle-checkbox(type="checkbox", name="allow-votes")
            button.toggle-switch
    //- Auto Team Balance
    li
      form(action="")
        label.switch
          span Auto Team Balance
          span
            input#auto-team-balance.toggle-checkbox(type="checkbox", name="auto-team-balance")
            button.toggle-switch
    //- Character Chooser
    li
      form(action="")
        label.switch
          span Character Chooser
          span
            input#character-chooser.toggle-checkbox(type="checkbox", name="character-chooser")
            button.toggle-switch
    //- Colorful Explosions
    li
      form(action="")
        label.switch
          span Colorful Explosion
          span
            input#colorful-explosion.toggle-checkbox(type="checkbox", name="colorful-explosion")
            button.toggle-switch
    //- Colorful Maps
    li
      form(action="")
        label.switch
          span Colorful Maps
          span
            input#colorful-maps.toggle-checkbox(type="checkbox", name="colorful-maps")
            button.toggle-switch
    //- Contribute Data
    li
      form(action="")
        label.switch
          span Contribute Data
          span
            input#contribute-data.toggle-checkbox(type="checkbox", name="contribute-data")
            button.toggle-switch
    //- Enable Hit Text
    li
      form(action="")
        label.switch
          span Enable Hit Text
          span
            input#enable-hit-text.toggle-checkbox(type="checkbox", name="enable-hit-text")
            button.toggle-switch
    //- Enable Tag Animation
    li
      form(action="")
        label.switch
          span Enable Tag Animation
          span
            input#enable-tag-animation.toggle-checkbox(type="checkbox", name="enable-tag-animation")
            button.toggle-switch
    //- Enable Top 5 Effects
    li
      form(action="")
        label.switch
          span Enable Top 5 Effects
          span
            input#enable-top-5-effects.toggle-checkbox(type="checkbox", name="enable-top-5-effects")
            button.toggle-switch
    //- Enable Effects
    li
      form(action="")
        label.switch
          span Enable Effects
          span
            input#enable-effects.toggle-checkbox(type="checkbox", name="enable-effects")
            button.toggle-switch
    //- Enable HP Tag
    li
      form(action="")
        label.switch
          span Enable HP Tag
          span
            input#enable-hp-tag.toggle-checkbox(type="checkbox", name="enable-hp-tag")
            button.toggle-switch
    //- Enable Rank
    li
      form(action="")
        label.switch
          span Enable Rank
          span
            input#enable-rank.toggle-checkbox(type="checkbox", name="enable-rank")
            button.toggle-switch
    //- Enable Stats
    li
      form(action="")
        label.switch
          span Enable Stats
          span
            input#enable-stats.toggle-checkbox(type="checkbox", name="enable-stats")
            button.toggle-switch
    //- Anti Id Revealer Switch Toggler
    li
      form(action="")
        label.switch
            span Anti Id Revealer
            span
              input#anti-id-revealer.toggle-checkbox(type="checkbox", name="anti-id-revealer")
              button.toggle-switch
    //- Show Kick Vote Starter Name
    li
      form(action="")
        label.switch
          span Show Kick Vote Starter Name
          span
            input#show-kick-vote-starter-name.toggle-checkbox(type="checkbox", name="show-kick-vote-starter-name")
            button.toggle-switch
    //- Chat Commands Or Broadcast Commands
    li
      form(action="")
        label.switch
          span Chat Commands (Or Broadcast Commands)
          span
            input#chat-commands.toggle-checkbox(type="checkbox", name="chat-commands")
            button.toggle-switch
    //- Stumbled Score Screen
    li
      form(action="")
        label.switch
          span Stumbled Score Screen
          span
            input#stumbled-score-screen.toggle-checkbox(type="checkbox", name="stumbled-score-screen")
            button.toggle-switch
    //- Enable Tags
    li
      form(action="")
        label.switch
          span Enable Tags
          span
            input#enable-tags.toggle-checkbox(type="checkbox", name="enable-tags")
            button.toggle-switch
    //- Teams Settings
    li.popup
      button.d-flex.justify-content-between.w-100
        span Teams Settings
        i.fa-solid.fa-angle-right
      //- Popup
      .popup-window
        .popup-header
          h5 Teams
          button.close.circle
            i.fa.fa-close
        .body.mt-2
          //- First Team
          ul
            li
              form(action="")
                label.form
                  span First Team Name :
                  textarea#first-team-name(placeholder="Type Your First Team Name Here", name="first-team-name")
            li
              form(action="")
                label.form
                  span First Team Color :
                  input#first-team-color(type="color", name="first-team-color")
          //- Second Team
          ul.mt-2
            li
              form(action="")
                label.form
                  span Second Team Name :
                  textarea#second-team-name(placeholder="Type Your Second Team Name Here", name="second-team-name")
            li
              form(action="")
                label.form
                  span Second Team Color :
                  input#second-team-color(type="color", name="second-team-color")
      .overley
    //- Score Screen Announcement
    li.popup
      button.d-flex.justify-content-between.w-100
        span Score Screen Announcement
        i.fa-solid.fa-angle-right
      .popup-window
        .popup-header
          h5 Score Screen Announcement
          button.close.circle
            i.fa.fa-close
        .body.mt-2
          ul
            //- Enable Score Screen Announcement
            li
              form(action="")
                label.switch
                  span Enable 
